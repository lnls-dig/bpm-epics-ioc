    field(DTYP,"asynUInt32Digital")
    field(DESC,"set kx")
    field(SCAN,"Passive")
    field(OUT,"@asynMask($(PORT),$(ADDR),0xFFFFFFFF,$(TIMEOUT))DSP_KX")
    field(FLNK,"$(P):BPM$(BPM_NUMBER):DSP:Kx_RBV")
}

