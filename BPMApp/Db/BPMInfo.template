record(longin,"$(P):BPM$(BPM_NUMBER):INFO:HarmonicNumber_RBV"){
    field(DTYP,"asynUInt32Digital")
    field(DESC,"get accelerator harmonic number")
    field(PINI,"YES")
    field(SCAN,"Passive")
    field(INP,"@asynMask($(PORT),$(ADDR),0xFFFFFFFF,$(TIMEOUT))INFO_HARMNUMB")
}

